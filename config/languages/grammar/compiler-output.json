{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Delphi Compiler Output",
  "scopeName": "text.output.delphi-compiler",
  "patterns": [
    {
      "name": "meta.compiler-message.delphi",
      "match": "^(\\[(ERROR|WARN|INFO|HINT)\\])(\\[[A-Z]\\d+\\]) ((?:[A-Za-z]:|/)[^:]+):(\\d+) - (.*)$",
      "captures": {
        "1": {
          "name": "keyword.control.severity.delphi",
          "patterns": [
            {
              "match": "\\[ERROR\\]",
              "name": "markup.error"
            },
            {
              "match": "\\[WARN\\]",
              "name": "markup.warning"
            },
            {
              "match": "\\[INFO\\]",
              "name": "markup.info"
            },
            {
              "match": "\\[HINT\\]",
              "name": "markup.hint"
            }
          ]
        },
        "3": {
          "name": "constant.numeric"
        },
        "4": {
          "name": "string.other.link"
        },
        "5": {
          "name": "variable.parameter.line-number"
        },
        "6": {
          "name": "comment.message"
        }
      }
    },
    {
      "name": "string.other.link",
      "match": "((?:[A-Za-z]:|/)[^:]+):(\\d+)"
    },
    {
      "name": "constant.numeric.line-number",
      "match": "\\(line\\s+\\d+\\)"
    },
    {
      "name": "constant.numeric",
      "match": "\\[[A-Z]\\d+\\]"
    },
    {
      "name": "keyword.other.header",
      "begin": "\\u2552",
      "end": "\\u255B",
      "beginCaptures": {
        "0": {
          "name": "keyword.other.header.start"
        }
      },
      "endCaptures": {
        "0": {
          "name": "keyword.other.header.end"
        }
      }
    }
  ]
}